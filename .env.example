# Service Desk Plus Cloud API Configuration
# For Self Client authentication, users provide Client ID & Secret in their .mcp.json
# The server handles OAuth flow and token storage

# Company-specific configuration (hard-coded for internal use)
# Your Service Desk Plus portal URL (without /app/ or /api/)
SDP_BASE_URL=https://sdpondemand.manageengine.com

# Instance name from Admin > Instance Settings
# This is used in the API path: /app/{instance_name}/api/v3/
SDP_INSTANCE_NAME=your_company_instance_name_here

# Optional Configuration
SDP_API_VERSION=v3  # API version (default: v3)
SDP_RATE_LIMIT_PER_MINUTE=60  # Max requests per minute (default: 60)
MCP_SERVER_NAME=service-desk-plus  # Name shown in MCP client

# Database Configuration (PostgreSQL)
SDP_DB_HOST=localhost
SDP_DB_PORT=5433  # Non-standard port to avoid conflicts
SDP_DB_NAME=sdp_mcp
SDP_DB_USER=sdpmcpservice
SDP_DB_PASSWORD=your_secure_password_here
SDP_DB_SSL=false  # Set to true for production

# Database root user (for migrations/admin)
SDP_DB_ROOT_USER=root
SDP_DB_ROOT_PASSWORD=your_root_password_here

# Optional: Database feature flags
SDP_USE_DB_TOKENS=true  # Use database for token persistence
SDP_USE_AUDIT_LOG=true  # Enable API audit logging
SDP_USE_CHANGE_TRACKING=true  # Track all changes for rollback

# Multi-Transport Configuration (V4)
SDP_TRANSPORT_MODE=multi  # Options: stdio (local only), sse (remote only), multi (both)
SDP_HTTP_PORT=3000  # Port for HTTP/SSE server
SDP_HTTP_HOST=0.0.0.0  # Host to bind to (0.0.0.0 for all interfaces)
SDP_API_KEYS=key1,key2,key3  # Comma-separated API keys for remote access
SDP_ALLOWED_IPS=*  # Comma-separated IP whitelist (* for all)
SDP_ENABLE_CORS=true  # Enable CORS for browser clients
SDP_CORS_ORIGIN=*  # CORS allowed origins