{
  "mcpServers": {
    "service-desk-plus": {
      "command": "node",
      "args": [
        "/path/to/service-desk-plus-cloud-api/dist/index.js"
      ],
      "env": {
        "SDP_CLIENT_ID": "your_oauth_client_id",
        "SDP_CLIENT_SECRET": "your_oauth_client_secret",
        "SDP_BASE_URL": "https://sdpondemand.manageengine.com",
        "SDP_INSTANCE_NAME": "your_instance_name",
        "SDP_API_VERSION": "v3",
        "SDP_RATE_LIMIT_PER_MINUTE": "60",
        "MCP_SERVER_NAME": "service-desk-plus",
        "MCP_LOG_LEVEL": "info"
      }
    }
  }
}