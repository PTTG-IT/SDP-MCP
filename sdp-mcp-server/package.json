{
  "name": "sdp-mcp-server",
  "version": "1.0.0",
  "description": "Multi-tenant MCP server for Service Desk Plus Cloud API integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc -p tsconfig.dev.json",
    "dev": "nodemon",
    "start": "node dist/index.js",
    "start:sse": "node dist/index-sse-simple.js",
    "start:js": "node scripts/start-server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "typecheck:dev": "tsc --noEmit -p tsconfig.dev.json",
    "setup:oauth": "node scripts/setup-oauth-tokens.js",
    "setup:oauth:js": "node scripts/quick-oauth-setup.js",
    "test:oauth": "node scripts/test-oauth-connection.js",
    "test:oauth:js": "node scripts/test-oauth-simple.js",
    "db:migrate": "node dist/database/migrations.js",
    "db:migrate:js": "node scripts/run-migrations.js",
    "fix:imports": "node scripts/fix-imports.js"
  },
  "keywords": [
    "mcp",
    "service-desk-plus",
    "multi-tenant",
    "oauth",
    "api"
  ],
  "author": "SDP MCP Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.0",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.0",
    "express": "^4.19.0",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.0",
    "jsonwebtoken": "^9.0.0",
    "open": "^10.1.2",
    "pg": "^8.12.0",
    "prom-client": "^15.1.0",
    "redis": "^4.6.0",
    "uuid": "^9.0.0",
    "winston": "^3.13.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.23.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.12.0",
    "@types/pg": "^8.11.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
