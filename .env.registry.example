# Service Desk Plus MCP Server - User Registry Configuration
# Copy this to .env and update with your values

# Database Configuration (PostgreSQL)
SDP_DB_HOST=localhost
SDP_DB_PORT=5433
SDP_DB_NAME=sdp_mcp
SDP_DB_USER=sdpmcpservice
SDP_DB_PASSWORD=your_secure_database_password_here

# IMPORTANT: Encryption Key for Credential Storage
# Generate a secure 32+ character key and keep it safe!
# Changing this will invalidate all stored credentials
SDP_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Server Configuration
SDP_HTTP_PORT=3456
SDP_HTTP_HOST=0.0.0.0
SDP_ENABLE_CORS=true
SDP_CORS_ORIGIN=*
SDP_MAX_CONNECTIONS=100
SDP_SESSION_TIMEOUT=1800000

# Security Configuration
# Comma-separated list of allowed IP addresses (* for all)
SDP_ALLOWED_IPS=*

# Rate Limiting
SDP_RATE_LIMIT_PER_KEY=60

# Feature Flags
SDP_USE_DB_TOKENS=true
SDP_USE_AUDIT_LOG=true
SDP_USE_CHANGE_TRACKING=true
SDP_ENABLE_METRICS=true

# User Cache TTL (seconds)
SDP_USER_CACHE_TTL=3600

# Optional: Standard API Keys (for backward compatibility)
# These work alongside user registry keys (usr_*)
SDP_API_KEYS=

# Optional: Admin credentials for rate limit system
# Only needed if you want global rate limiting
SDP_CLIENT_ID=
SDP_CLIENT_SECRET=
SDP_BASE_URL=
SDP_INSTANCE_NAME=
SDP_REFRESH_TOKEN=

# Logging
NODE_ENV=production
MCP_SERVER_NAME=service-desk-plus-registry